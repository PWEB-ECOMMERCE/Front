{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
      "no-duplicate-imports": "error",
      "react/prop-types": ["off"],
      "no-unused-vars": [1,{ "args": "after-used","argsIgnorePattern":"^_" }],
      "curly": "error",
      "camelcase": "error",
      "line-comment-position": ["error",{"position":"above"}],
      "capitalized-comments": ["error","always"]
    },
    "settings":{
      "import/resolver":{
        "typescript":{}
      }
    }
}
